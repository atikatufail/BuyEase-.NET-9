@{
    Layout = null;    
}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <title>Admin Login | BuyEase</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
        <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
        <style>
            body {
                font-family: 'Inter', sans-serif;
                background: linear-gradient(135deg, #3d2b1f 0%, #5d4037 100%);
                height: 100vh;
                display: flex;
                align-items: center;
                justify-content: center;
                margin: 0;
                overflow: hidden;
            }
            .login-card {
                background: rgba(255, 255, 255, 0.05);
                backdrop-filter: blur(15px);
                border: 1px solid rgba(255, 255, 255, 0.1);
                border-radius: 24px;
                padding: 3rem;
                width: 100%;
                max-width: 450px;
                box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.6);
                animation: slideUp 0.6s ease-out;
            }
            @@keyframes slideUp {
                from { opacity: 0; transform: translateY(20px); }
                to { opacity: 1; transform: translateY(0); }
            }
            .brand-logo {
                font-size: 2.5rem;
                font-weight: 800;
                color: #fff;
                margin-bottom: 0.5rem;
                text-align: center;
                letter-spacing: -1.5px;
            }
            .brand-logo span { color: #f5deb3; }
            .login-title {
                color: #d3c4bc;
                text-align: center;
                margin-bottom: 2.5rem;
                font-size: 0.875rem;
                text-transform: uppercase;
                letter-spacing: 2px;
                font-weight: 500;
            }
            .form-control {
                background: rgba(255, 255, 255, 0.1);
                border: 1px solid rgba(255, 255, 255, 0.2);
                border-radius: 12px;
                color: #fff;
                padding: 0.8rem 1rem;
                transition: all 0.3s ease;
            }
            .form-control:focus {
                background: rgba(255, 255, 255, 0.15);
                border-color: #f5deb3;
                box-shadow: 0 0 0 4px rgba(245, 222, 179, 0.1);
                color: #fff;
            }
            .form-label {
                color: #d3c4bc;
                font-weight: 500;
                margin-bottom: 0.5rem;
                font-size: 0.875rem;
            }
            .btn-login {
                background: #8b4513;
                border: none;
                border-radius: 12px;
                padding: 0.8rem;
                font-weight: 600;
                color: white;
                margin-top: 1rem;
                transition: all 0.3s ease;
            }
            .btn-login:hover {
                background: #a67c52;
                transform: translateY(-2px);
                box-shadow: 0 10px 15px -3px rgba(139, 69, 19, 0.3);
            }
            .error-message {
                background: rgba(239, 68, 68, 0.1);
                border-left: 4px solid #ef4444;
                color: #f87171;
                padding: 1rem;
                border-radius: 8px;
                margin-bottom: 1.5rem;
                font-size: 0.875rem;
                display: @(ViewBag.message != null ? "block" : "none");
            }
        </style>
    </head>
    <body>
        <div class="login-card">
            <div class="brand-logo">Buy<span>Ease</span></div>
            <div class="login-title">Admin Control Panel</div>
            
            <div class="error-message">
                <i class="fas fa-exclamation-circle me-2"></i> @ViewBag.message
            </div>

            <form method="post">
                <div class="mb-4">
                    <label class="form-label">Email Address</label>
                    <input type="email" class="form-control" name="adminEmail" placeholder="admin@gmail.com" required>
                </div>
                <div class="mb-4">
                    <label class="form-label">Password</label>
                    <input type="password" class="form-control" name="adminPassword" placeholder="••••••••" required>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-login">
                        Sign In <i class="fas fa-arrow-right ms-2"></i>
                    </button>
                </div>
            </form>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
