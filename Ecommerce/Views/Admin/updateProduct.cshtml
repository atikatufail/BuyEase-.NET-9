@model TblProduct
@{
    ViewData["Title"] = "Update Product";
    Layout = "_Dashboard";
}

<div class="container-fluid px-4 py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("fetchProduct")">Products</a></li>
                    <li class="breadcrumb-item active">Update Product</li>
                </ol>
            </nav>

            <!-- Product Info Update -->
            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-header bg-white border-0 py-3">
                    <h4 class="fw-bold text-dark mb-0">Product Information</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="updateProduct" method="post">
                        <input type="hidden" name="Prod_id" value="@Model.Prod_id">
                        <input type="hidden" name="Prod_image" value="@Model.Prod_image" />
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-muted small fw-bold text-uppercase">Product Name</label>
                                <input type="text" name="Prod_name" class="form-control rounded-3 border-light bg-light" value="@Model.Prod_name" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-muted small fw-bold text-uppercase">Price ($)</label>
                                <input type="number" name="Prod_price" class="form-control rounded-3 border-light bg-light" value="@Model.Prod_price" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label text-muted small fw-bold text-uppercase">Description</label>
                            <textarea name="Prod_description" class="form-control rounded-3 border-light bg-light" rows="3" required>@Model.Prod_description</textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label text-muted small fw-bold text-uppercase">Category</label>
                            @Html.Partial("CategoryDropdown",ViewData["category"])
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-brown btn-lg rounded-3 fw-bold py-3 shadow-sm">
                                <i class="fas fa-save me-2"></i>Update Details
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Image Update Section -->
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white border-0 py-3">
                    <h4 class="fw-bold text-dark mb-0">Update Image</h4>
                </div>
                <div class="card-body p-4">
                    <form method="post" asp-action="ChangeProductImage" enctype="multipart/form-data">
                        <input type="hidden" name="Prod_id" value="@Model.Prod_id">
                        <input type="hidden" name="Prod_name" value="@Model.Prod_name">
                        <input type="hidden" name="Prod_price" value="@Model.Prod_price">
                        <input type="hidden" name="Prod_description" value="@Model.Prod_description">

                        <div class="row align-items-center">
                            <div class="col-md-4 mb-3 mb-md-0 text-center">
                                <div class="bg-light p-3 rounded-4 border border-light d-inline-block">
                                    <img src="@("~/product_image/"+Model.Prod_image)" asp-append-version="true" class="rounded-3 shadow-sm" style="max-width: 150px; height: auto;"/>
                                </div>
                                <p class="text-muted small mt-2">Current Image</p>
                            </div>
                            <div class="col-md-8">
                                <label class="form-label text-muted small fw-bold text-uppercase">Select New Image</label>
                                <input type="file" name="product_image" class="form-control rounded-3 border-light bg-light mb-3" required>
                                <button type="submit" class="btn btn-warning btn-lg rounded-3 fw-bold w-100 py-3 shadow-sm text-dark">
                                    <i class="fas fa-camera me-2"></i>Change Image
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="text-center mt-4">
                <a href="@Url.Action("fetchProduct")" class="btn btn-link text-muted text-decoration-none">Back to Products List</a>
            </div>
        </div>
    </div>
</div>

<style>
    .breadcrumb-item a { text-decoration: none; color: #6c757d; }
    .breadcrumb-item.active { color: #8b4513; font-weight: 500; }
    .form-control:focus { background-color: #fff; border-color: #8b4513; box-shadow: 0 0 0 4px rgba(139, 69, 19, 0.1); }
    select.form-control { -webkit-appearance: listbox !important; }
</style>
