@model List<TblCategory>

@{
    ViewData["Title"] = "Categories";
    Layout = "_Dashboard";
}

<div class="container-fluid px-4 py-4">
    <div class="d-flex justify-content-between align-items-end mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Dashboard</a></li>
                    <li class="breadcrumb-item active">Categories</li>
                </ol>
            </nav>
            <h2 class="fw-bold mb-0">Product Categories</h2>
        </div>
        <a href="@Url.Action("addCategory", "Admin")" class="btn btn-brown rounded-pill px-4 shadow-sm">
            <i class="fas fa-plus me-2"></i> Add New Category
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 py-3 text-uppercase small fw-bold text-muted">ID</th>
                            <th class="py-3 text-uppercase small fw-bold text-muted">Category Name</th>
                            <th class="py-3 text-uppercase small fw-bold text-muted text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var cat in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <span class="fw-bold text-dark">#@cat.Category_id</span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-soft-brown rounded-circle p-2 me-3">
                                            <i class="fas fa-tag text-brown"></i>
                                        </div>
                                        <span class="fw-semibold">@cat.Category_name</span>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group shadow-sm rounded-pill overflow-hidden">
                                        <a href="@Url.Action("updateCategory","Admin", new { id = @cat.Category_id })" class="btn btn-sm btn-white border-end" title="Update"><i class="fas fa-edit text-warning"></i></a>
                                        <a href="@Url.Action("deletePermissionCategory" ,"Admin",new{id=@cat.Category_id})" class="btn btn-sm btn-white" title="Delete"><i class="fas fa-trash text-danger"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-white { background: white; border: none; transition: all 0.2s; }
    .btn-white:hover { background: #f8f9fa; }
    .table > :not(caption) > * > * { border-bottom-color: #f1f1f1; }
    .table tbody tr:last-child > td { border-bottom: none; }
    .breadcrumb-item a { text-decoration: none; color: #6c757d; }
    .breadcrumb-item.active { color: #8b4513; font-weight: 500; }
</style>