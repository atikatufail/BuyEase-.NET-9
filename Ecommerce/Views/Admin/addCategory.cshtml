@{
    ViewData["Title"] = "Add Category";
    Layout = "_Dashboard";
}

<div class="container-fluid px-4 py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("fetchCategory")">Categories</a></li>
                    <li class="breadcrumb-item active">Add New</li>
                </ol>
            </nav>

            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white border-0 py-3">
                    <h4 class="fw-bold text-dark mb-0">Add New Category</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="addCategory" method="post">
                        <div class="mb-4">
                            <label class="form-label text-muted small fw-bold text-uppercase">Category Name</label>
                            <input type="text" name="Category_name" class="form-control form-control-lg rounded-3 border-light bg-light" placeholder="e.g. Electronics, Fashion..." required>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg rounded-3 fw-bold py-3 shadow-sm">
                                <i class="fas fa-plus-circle me-2"></i>Create Category
                            </button>
                            <a href="@Url.Action("fetchCategory")" class="btn btn-link text-muted text-decoration-none">Cancel and Return</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .breadcrumb-item a { text-decoration: none; color: #6c757d; }
    .breadcrumb-item.active { color: #0d6efd; font-weight: 500; }
    .form-control:focus { background-color: #fff; border-color: #0d6efd; box-shadow: 0 0 0 4px rgba(13, 110, 253, 0.1); }
</style>