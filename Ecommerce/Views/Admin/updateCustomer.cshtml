@model TblCustomer 

@{
    Layout = "_Dashboard";
}

<div class="container-fluid px-4 py-5">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-white border-bottom py-3">
            <h4 class="mb-0 text-uppercase fw-bold text-primary" style="letter-spacing:2px">Update Customer Details</h4>
        </div>
        <div class="card-body p-4">
            <form method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Cust_id">
                
                <div class="row g-4">
                    <div class="col-md-8">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Customer Name</label>
                                <input type="text" asp-for="Cust_name" class="form-control rounded-pill px-3">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Email Address</label>
                                <input type="email" asp-for="Cust_email" class="form-control rounded-pill px-3">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Password</label>
                                <input type="text" asp-for="Cust_password" class="form-control rounded-pill px-3">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Phone Number</label>
                                <input type="text" asp-for="Cust_phone" class="form-control rounded-pill px-3">
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-semibold">Address</label>
                                <input type="text" asp-for="Cust_address" class="form-control rounded-pill px-3">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-semibold">Country</label>
                                <input type="text" asp-for="Cust_country" class="form-control rounded-pill px-3">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-semibold">City</label>
                                <input type="text" asp-for="Cust_city" class="form-control rounded-pill px-3">
                            </div>
                            <div class="col-md-4">
                                <label class="form-label fw-semibold">Gender</label>
                                <select asp-for="Cust_gender" class="form-select rounded-pill px-3">
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 text-center border-start">
                        <label class="form-label fw-semibold d-block">Current Profile Picture</label>
                        <div class="mb-3">
                            @if (!string.IsNullOrEmpty(Model.Cust_image))
                            {
                                <img src="~/customer_image/@Model.Cust_image" class="img-thumbnail rounded-4 shadow-sm" style="max-width: 150px; height: auto;" alt="Customer Image">
                            }
                            else
                            {
                                <div class="bg-light rounded-4 d-flex align-items-center justify-content-center mx-auto shadow-sm" style="width: 150px; height: 150px;">
                                    <i class="fas fa-user fa-4x text-muted opacity-50"></i>
                                </div>
                            }
                        </div>
                        <div class="mb-4 text-start">
                            <label class="form-label fw-semibold">Change Image</label>
                            <input type="file" name="Cust_image" class="form-control rounded-3">
                            <small class="text-muted mt-1 d-block font-xs">Recommended size: 300x300 px</small>
                        </div>
                    </div>
                </div>

                <div class="mt-5 border-top pt-4 text-end">
                    <a asp-action="FetchCustomer" class="btn btn-light rounded-pill px-4 me-2">Cancel</a>
                    <button type="submit" class="btn btn-primary rounded-pill px-5 shadow-sm">Update Customer</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .font-xs { font-size: 0.75rem; }
    .form-control:focus, .form-select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.1);
    }
</style>