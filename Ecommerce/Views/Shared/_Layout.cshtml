<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecommerce</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        :root { --primary-color: #8b4513; --secondary-color: #3d2b1f; }
        body { font-family: 'Inter', sans-serif; color: #4a3728; background-color: #fff; }
        .top-bar { font-size: 13px; color: #fff; background-color: #8b4513; padding: 10px 0; }
        .main-header { padding: 25px 0; border-bottom: 1px solid #eee; background-color: #fff; }
        .navbar-brand { font-size: 32px; font-weight: 800; color: var(--primary-color) !important; letter-spacing: -1.5px; text-transform: none; }
        .search-wrapper { position: relative; max-width: 500px; width: 100%; }
        .search-input { border-radius: 8px; border: 1px solid #d3c4bc; padding-right: 50px; background-color: #fff; height: 45px; }
        .search-btn { position: absolute; right: 5px; top: 50%; transform: translateY(-50%); border: none; background: none; color: #8b4513; font-size: 18px; }
        .header-icons { font-size: 24px; color: #3d2b1f; }
        .header-icons a { color: inherit; text-decoration: none; position: relative; transition: 0.3s; }
        .header-icons a:hover { color: var(--primary-color); }
        .cart-count { position: absolute; top: -5px; right: -12px; background: var(--primary-color); color: white; font-size: 10px; padding: 3px 6px; border-radius: 50%; border: 2px solid #fff; }
        .footer { background: #3d2b1f; color: #d3c4bc; padding: 70px 0 30px; }
        .footer h5 { color: #fff; font-weight: 600; margin-bottom: 25px; border-bottom: 2px solid var(--primary-color); display: inline-block; padding-bottom: 5px; }
        .footer a { color: #bcaaa4; text-decoration: none; transition: 0.3s; }
        .footer a:hover { color: #fff; }
        .footer-bottom { border-top: 1px solid #5d4037; margin-top: 50px; padding-top: 25px; font-size: 14px; }
        .nav-link { font-weight: 600; color: #a67c52 !important; text-transform: uppercase; font-size: 14px; letter-spacing: 0.8px; transition: 0.3s; }
        .nav-link:hover { color: var(--primary-color) !important; transform: translateY(-2px); }
        .sticky-top { box-shadow: 0 2px 10px rgba(139, 69, 19, 0.05); }
        
        /* Global Background Image with Transparency */
        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('/images/banner/site-bg.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            opacity: 0.05;
            z-index: -2;
            pointer-events: none;
        }
    </style>
</head>
<body>
    <div class="top-bar">
        <div class="container d-flex justify-content-between align-items-center">
            <div><i class="bi bi-telephone ms-1"></i> +0123 456 789</div>
            <div class="d-flex align-items-center">
                @if (Context.Session.GetString("cust_session") == null)
                {
                    <a asp-controller="Customer" asp-action="Login" class="text-decoration-none text-white me-3 fw-500 hover-white"><i class="bi bi-box-arrow-in-right me-1"></i>Sign In</a>
                    <a asp-controller="Customer" asp-action="Signup" class="text-decoration-none text-white fw-500 hover-white"><i class="bi bi-person-plus me-1"></i>Sign Up</a>
                }
                else
                {
                    <span class="text-white me-3 opacity-90">Welcome, <strong>@Context.Session.GetString("cust_name")</strong></span>
                    <a asp-controller="Customer" asp-action="Logout" class="text-decoration-none text-white fw-500 hover-white border-start border-white border-opacity-25 ps-3"><i class="bi bi-box-arrow-right me-1"></i>Logout</a>
                }
            </div>
        </div>
    </div>

    <header class="main-header">
        <div class="container d-flex align-items-center justify-content-between">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">BuyEase</a>
            
            <div class="search-wrapper d-none d-md-block mx-4">
                <form asp-controller="Home" asp-action="Shop" method="get">
                    <div class="input-group">
                        <input type="text" name="search" class="form-control search-input" placeholder="What are you looking for today?" value="@ViewBag.SearchTerm">
                        <button type="submit" class="search-btn px-3"><i class="bi bi-search"></i></button>
                    </div>
                </form>
            </div>

            <div class="header-icons d-flex align-items-center">
                <a asp-controller="Customer" asp-action="Profile" class="me-4 text-center" style="font-size: 13px;">
                    <i class="bi bi-person d-block fs-4 mb-1"></i> Account
                </a>
                <a asp-controller="Cart" asp-action="Index" class="text-center" style="font-size: 13px;">
                    <div class="position-relative d-inline-block">
                        <i class="bi bi-bag d-block fs-4 mb-1"></i>
                        @await Component.InvokeAsync("CartCount")
                    </div>
                    <span>Cart</span>
                </a>
            </div>
        </div>
    </header>

    <nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top py-0 border-bottom">
        <div class="container">
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item py-2"><a class="nav-link px-4" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item py-2"><a class="nav-link px-4" asp-controller="Home" asp-action="Shop">Shop</a></li>
                    <li class="nav-item py-2"><a class="nav-link px-4" asp-controller="Home" asp-action="Category">Categories</a></li>
                    <li class="nav-item py-2"><a class="nav-link px-4" asp-controller="Home" asp-action="About">About Us</a></li>
                    <li class="nav-item py-2"><a class="nav-link px-4" asp-controller="Home" asp-action="Contact">Contact</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Cart Notification Toast -->
    <div class="position-fixed bottom-0 end-0 p-4" style="z-index: 1060">
        <div id="cartToast" class="toast align-items-center text-white bg-brown border-0 shadow-lg" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex p-2">
                <div class="toast-body">
                    <i class="bi bi-check-circle-fill me-2"></i> @TempData["CartMessage"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-lg-3 mb-4">
                    <h2 class="text-white fw-bold mb-4" style="letter-spacing:-1px">BuyEase</h2>
                    <p class="small">Your ultimate destination for premium quality and effortless shopping. We bring the best products right to your doorstep.</p>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <h5>Useful Links</h5>
                    <ul class="list-unstyled small lh-lg">
                        <li><a asp-controller="Home" asp-action="About">About BuyEase</a></li>
                        <li><a href="#">How to shop</a></li>
                        <li><a href="#">FAQ</a></li>
                        <li><a asp-controller="Home" asp-action="Contact">Contact us</a></li>
                    </ul>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <h5>Customer Service</h5>
                    <ul class="list-unstyled small lh-lg">
                        <li><a href="#">Payment Methods</a></li>
                        <li><a href="#">Money-back guarantee!</a></li>
                        <li><a href="#">Returns</a></li>
                        <li><a href="#">Shipping</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                    </ul>
                </div>
                <div class="col-md-6 col-lg-3 mb-4">
                    <h5>My Account</h5>
                    <ul class="list-unstyled small lh-lg">
                        <li><a asp-controller="Customer" asp-action="Login">Sign In</a></li>
                        <li><a asp-controller="Cart" asp-action="Index">View Cart</a></li>
                        <li><a href="#">My Wishlist</a></li>
                        <li><a href="#">Track My Order</a></li>
                        <li><a href="#">Help</a></li>
                    </ul>
                </div>
            </div>
            <div class="footer-bottom d-flex flex-column flex-md-row justify-content-between align-items-center">
                <p class="mb-3 mb-md-0 opacity-75">&copy; @DateTime.Now.Year BuyEase Store. All Rights Reserved.</p>
                <div>
                    <img src="https://molla-theme.com/assets/images/payments.png" alt="Payment Methods" class="opacity-75">
                </div>
            </div>
        </div>
    </footer>

    <style>
        .hover-white:hover { opacity: 0.8; color: #fff !important; }
        .bg-brown { background-color: var(--primary-color) !important; }
        .fw-500 { font-weight: 500; }
        .opacity-90 { opacity: 0.9; }
    </style>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var cartMsg = '@TempData["CartMessage"]';
            if (cartMsg && cartMsg !== '') {
                var toastEl = document.getElementById('cartToast');
                var toast = new bootstrap.Toast(toastEl, { delay: 3000 });
                toast.show();
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
