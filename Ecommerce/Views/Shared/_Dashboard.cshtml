<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Admin Dashboard</title>
    <link href="~/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark shadow-sm" style="background-color: #3d2b1f;">
            <!-- Sidebar Toggle-->
            <button class="btn btn-link btn-sm order-1 order-lg-0 ms-2 me-2" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
            <!-- Navbar Brand-->
            <a class="navbar-brand fw-bold mb-0" href="@Url.Action("Index", "Admin")" style="letter-spacing: 1px;">ADMIN <span class="text-primary">PANEL</span></a>
            <!-- Navbar Search-->
            <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
                <div class="input-group">
                </div>
            </form>
            <!-- Navbar-->
            <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="@Url.Action("Profile", "Admin")">Profile</a></li>
                        <li><hr class="dropdown-divider" /></li>
                        <li><a class="dropdown-item" href="@Url.Action("logout", "admin")">Logout</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
        <div id="layoutSidenav">
            <div id="layoutSidenav_nav">
                <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion" style="background-color: #8b4513;">
                    <div class="sb-sidenav-menu">
                        <div class="nav">
                            <a class="nav-link" href="@Url.Action("Index", "Admin")">
                                <div class="sb-nav-link-icon"><i class="fas fa-home"></i></div>
                                Home
                            </a>
                            <a class="nav-link" href="@Url.Action("Profile", "Admin")">
                                <div class="sb-nav-link-icon"><i class="fas fa-user"></i></div>
                                Profile
                            </a>
                            <a class="nav-link" href="@Url.Action("FetchCustomer", "Admin")">
                                <div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
                                Customer
                            </a>
                            <a class="nav-link" href="@Url.Action("fetchCategory", "Admin")">
                                <div class="sb-nav-link-icon"><i class="fas fa-list"></i></div>
                                Category
                            </a>
                            <a class="nav-link" href="@Url.Action("fetchProduct","Admin")">
                                <div class="sb-nav-link-icon"><i class="fas fa-shopping-basket"></i></div>
                                Products
                            </a>
                            <a class="nav-link" href="@Url.Action("FetchCarts", "Admin")">
                                <div class="sb-nav-link-icon"><i class="fas fa-shopping-cart"></i></div>
                                Cart
                            </a>
                        </div>
                    </div>
                </nav>
            </div>
            <!-- Right Side Content Start -->
            <div id="layoutSidenav_content">
                <main>
                    
                    <div>
                        @RenderBody()
                    </div>
                </main>
            </div>
            <!-- Right Side Content End -->
        </div>
    <style>
        .sb-sidenav-dark {
            background-color: #8b4513 !important;
        }
        .sb-sidenav-dark .nav-link {
            color: rgba(255, 255, 255, 0.8) !important;
            transition: all 0.3s ease;
            border-left: 4px solid transparent;
            margin: 2px 0;
        }
        .sb-sidenav-dark .nav-link:hover {
            color: #fff !important;
            background: rgba(255, 255, 255, 0.1);
            border-left: 4px solid #f5deb3;
        }
        .sb-sidenav-dark .nav-link.active {
            color: #fff !important;
            background: rgba(255, 255, 255, 0.15);
            border-left: 4px solid #f5deb3;
        }
        .sb-nav-link-icon {
            color: #f5deb3 !important;
        }
        .text-primary {
            color: #f5deb3 !important;
        }
        .navbar-brand {
            font-size: 1.25rem;
        }
        .btn-link {
            color: #fff !important;
        }
        .btn-brown {
            background-color: #8b4513 !important;
            color: #fff !important;
            border: none;
        }
        .btn-brown:hover {
            background-color: #a67c52 !important;
            color: #fff !important;
        }
        .bg-soft-brown {
            background-color: rgba(139, 69, 19, 0.1) !important;
        }
        .text-brown {
            color: #8b4513 !important;
        }
        .bg-brown {
            background-color: #8b4513 !important;
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="~/js/scripts.js"></script>
</body>
</html>
