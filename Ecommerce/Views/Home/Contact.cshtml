@{
    ViewData["Title"] = "Contact Us";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-12 text-center mb-5">
            <h1 class="display-4 fw-bold">Get In Touch</h1>
            <p class="text-muted">Have a question? We'd love to hear from you.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6 mb-5">
            <div class="card border-0 shadow-sm p-4 h-100">
                <h3 class="mb-4 fw-bold text-brown">Contact Information</h3>
                <div class="d-flex mb-4">
                    <i class="bi bi-geo-alt fs-4 text-brown me-3"></i>
                    <div>
                        <h5 class="mb-1 fw-bold">Address</h5>
                        <p class="text-muted small">123 BuyEase Street, Business Hub, NY 10001</p>
                    </div>
                </div>
                <div class="d-flex mb-4">
                    <i class="bi bi-envelope fs-4 text-brown me-3"></i>
                    <div>
                        <h5 class="mb-1 fw-bold">Email</h5>
                        <p class="text-muted small">support@buyease.com</p>
                    </div>
                </div>
                <div class="d-flex mb-0">
                    <i class="bi bi-telephone fs-4 text-brown me-3"></i>
                    <div>
                        <h5 class="mb-1 fw-bold">Phone</h5>
                        <p class="text-muted small">+0123 456 789</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-5">
            <div class="card border-0 shadow-sm p-4">
                <h3 class="mb-4">Send us a Message</h3>
                <form>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <input type="text" class="form-control" placeholder="Your Name" required>
                        </div>
                        <div class="col-md-6">
                            <input type="email" class="form-control" placeholder="Your Email" required>
                        </div>
                        <div class="col-12">
                            <input type="text" class="form-control" placeholder="Subject">
                        </div>
                        <div class="col-12">
                            <textarea class="form-control" rows="5" placeholder="Message" required></textarea>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-brown w-100 py-3 rounded-pill fw-bold shadow-sm">Send Message</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
