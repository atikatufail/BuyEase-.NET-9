@model IEnumerable<Ecommerce.Models.TblProduct>

@{
    ViewData["Title"] = "Shop";
    var categories = ViewBag.Categories as IEnumerable<Ecommerce.Models.TblCategory>;
    var selectedCategoryId = ViewBag.SelectedCategory as int?;
}

<div class="container my-5">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-3">
            <h4 class="fw-bold mb-4 text-brown">Collections</h4>
            <div class="list-group list-group-flush shadow-sm rounded-4 overflow-hidden mb-4 border">
                <a asp-action="Shop" asp-route-categoryId="" class="list-group-item list-group-item-action @(selectedCategoryId == null ? "active bg-brown border-brown" : "")">
                    All BuyEase Items
                </a>
                @foreach (var cat in categories)
                {
                    <a asp-action="Shop" asp-route-categoryId="@cat.Category_id" class="list-group-item list-group-item-action @(selectedCategoryId == cat.Category_id ? "active bg-brown border-brown" : "")">
                        @cat.Category_name
                    </a>
                }
            </div>
        </div>

        <!-- Product Grid -->
        <div class="col-lg-9">
            <div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
                <h2 class="fw-bold text-brown">@(selectedCategoryId != null ? categories.First(c => c.Category_id == selectedCategoryId).Category_name : "All Collections")</h2>
                <span class="text-muted small">Showing @Model.Count() products</span>
            </div>

            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                @if (!Model.Any())
                {
                    <div class="col-12 text-center py-5">
                        <i class="bi bi-box-seam display-1 text-muted opacity-25"></i>
                        <p class="mt-3 lead text-muted">No products found in this category.</p>
                    </div>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <div class="col">
                            <div class="card h-100 border-0 shadow-sm product-card rounded-4 overflow-hidden bg-white">
                                <div class="position-relative overflow-hidden bg-light" style="height: 250px;">
                                    <img src="~/product_image/@item.Prod_image" class="w-100 h-100 p-4" alt="@item.Prod_name" style="object-fit: contain; transition: 0.5s;">
                                    <div class="product-overlay d-flex align-items-center justify-content-center">
                                        <form asp-controller="Cart" asp-action="AddToCart" method="post" class="w-75">
                                            <input type="hidden" name="prodId" value="@item.Prod_id" />
                                            <button type="submit" class="btn btn-brown w-100 rounded-pill shadow py-2 fw-bold">
                                                <i class="bi bi-cart-plus me-2"></i> Add to Cart
                                            </button>
                                        </form>
                                    </div>
                                </div>
                                <div class="card-body text-center p-3 d-flex flex-column justify-content-between">
                                    <div>
                                        <p class="text-muted small mb-1 text-uppercase ls-1" style="font-size: 0.7rem;">@item.Category?.Category_name</p>
                                        <h6 class="card-title fw-bold mb-2">
                                            <a asp-action="ProductDetails" asp-route-id="@item.Prod_id" class="text-decoration-none text-dark stretched-link">@item.Prod_name</a>
                                        </h6>
                                    </div>
                                    <div class="mt-auto">
                                        <h5 class="text-brown fw-bold mb-0">$@item.Prod_price</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

<style>
    .text-brown { color: #8b4513 !important; }
    .bg-brown { background-color: #8b4513 !important; }
    .btn-brown { background-color: #8b4513; color: white; border: none; }
    .btn-brown:hover { background-color: #70360f; color: white; }
    .border-brown { border-color: #8b4513 !important; }
    .product-card { transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1); }
    .product-card:hover { transform: translateY(-8px); box-shadow: 0 1.5rem 4rem rgba(139, 69, 19, 0.15) !important; }
    
    .product-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(2px);
        opacity: 0;
        transition: 0.4s;
        z-index: 2;
    }
    
    .product-card:hover .product-overlay { opacity: 1; }
    .product-card:hover img { transform: scale(1.1); filter: blur(2px); }
    
    .list-group-item.active { font-weight: bold; border-color: #8b4513 !important; }
    .ls-1 { letter-spacing: 1px; }
    .stretched-link::after { z-index: 1; }
    .add-to-cart-form button { position: relative; z-index: 3; }
</style>
