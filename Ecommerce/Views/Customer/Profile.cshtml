@model Ecommerce.Models.TblCustomer
@{
    ViewData["Title"] = "My Profile";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow rounded-4 text-center p-4 bg-white">
                <div class="mb-3">
                    @if (!string.IsNullOrEmpty(Model.Cust_image))
                    {
                        <img src="~/product_image/@Model.Cust_image" class="rounded-circle shadow-sm border border-brown p-1" style="width: 150px; height: 150px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="rounded-circle bg-light d-flex align-items-center justify-content-center mx-auto" style="width: 150px; height: 150px;">
                            <i class="bi bi-person text-brown fs-1"></i>
                        </div>
                    }
                </div>
                <h4 class="fw-bold text-brown mb-1">@Model.Cust_name</h4>
                <p class="text-muted small mb-3">@Model.Cust_email</p>
                <div class="d-grid gap-2">
                    <button class="btn btn-outline-brown btn-sm rounded-pill fw-bold">Edit Profile</button>
                    <a asp-action="Logout" class="btn btn-danger btn-sm rounded-pill fw-bold">Logout</a>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="card border-0 shadow rounded-4 bg-white">
                <div class="card-header bg-white py-3 border-bottom border-light">
                    <h5 class="fw-bold text-brown mb-0"><i class="bi bi-person-lines-fill me-2"></i>Personal Details</h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label class="text-muted small fw-bold">Email</label>
                            <p class="mb-0 fw-500">@Model.Cust_email</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small fw-bold">Phone</label>
                            <p class="mb-0 fw-500">@Model.Cust_phone</p>
                        </div>
                        <div class="col-md-12">
                            <label class="text-muted small fw-bold">Address</label>
                            <p class="mb-0 fw-500">@Model.Cust_address</p>
                        </div>
                        <div class="col-md-4">
                            <label class="text-muted small fw-bold">City</label>
                            <p class="mb-0 fw-500">@Model.Cust_city</p>
                        </div>
                        <div class="col-md-4">
                            <label class="text-muted small fw-bold">Country</label>
                            <p class="mb-0 fw-500">@Model.Cust_country</p>
                        </div>
                        <div class="col-md-4">
                            <label class="text-muted small fw-bold">Gender</label>
                            <p class="mb-0 fw-500">@Model.Cust_gender</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .text-brown { color: #8b4513 !important; }
    .border-brown { border-color: #8b4513 !important; }
    .btn-outline-brown { color: #8b4513; border: 1px solid #8b4513; transition: 0.3s; }
    .btn-outline-brown:hover { background-color: #8b4513; color: white; }
    .fw-500 { font-weight: 500; color: #3d2b1f; }
</style>
