@model IEnumerable<Ecommerce.Models.TblCart>

@{
    ViewData["Title"] = "Shopping Cart";
    decimal total = 0;
}

<div class="container my-5 py-5">
    <div class="row">
        <div class="col-lg-9">
            <h2 class="fw-bold mb-4">Shopping Cart</h2>
            
            <div class="table-responsive shadow-sm rounded-3">
                <table class="table table-hover align-middle mb-0 bg-white">
                    <thead class="bg-light">
                        <tr>
                            <th class="border-0 px-4 py-3">Product</th>
                            <th class="border-0 px-4 py-3">Price</th>
                            <th class="border-0 px-4 py-3">Quantity</th>
                            <th class="border-0 px-4 py-3 text-end">Total</th>
                            <th class="border-0 py-3"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5">
                                    <i class="bi bi-cart-x display-1 text-muted"></i>
                                    <p class="mt-3 lead text-muted">Your cart is currently empty.</p>
                                    <a asp-controller="Home" asp-action="Shop" class="btn btn-outline-primary mt-3">Continue Shopping</a>
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                var itemTotal = item.Prod_quantity * (item.Product?.Prod_price ?? 0);
                                total += (decimal)itemTotal;
                                <tr>
                                    <td class="px-4">
                                        <div class="d-flex align-items-center">
                                            <img src="~/product_image/@item.Product?.Prod_image" alt="" style="width: 60px; height: 60px;" class="rounded-3 me-3 object-fit-contain bg-light">
                                            <div>
                                                <h6 class="mb-0 fw-bold">@item.Product?.Prod_name</h6>
                                                <small class="text-muted">@item.Product?.Category?.Category_name</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-4">$@item.Product?.Prod_price</td>
                                    <td class="px-4">
                                        <div class="d-flex align-items-center" style="max-width: 140px;">
                                            <div class="input-group input-group-sm">
                                                <a asp-action="MinusProduct" asp-route-cartId="@item.Cart_id" class="btn btn-outline-secondary btn-sm rounded-start-pill"><i class="bi bi-dash"></i></a>
                                                <input type="number" class="form-control text-center border-secondary-subtle" value="@item.Prod_quantity" readonly style="width: 45px;">
                                                <a asp-action="PlusProduct" asp-route-cartId="@item.Cart_id" class="btn btn-outline-secondary btn-sm rounded-end-pill"><i class="bi bi-plus"></i></a>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-end px-4 fw-bold text-brown">$@itemTotal</td>
                                    <td>
                                        <form asp-action="RemoveFromCart" method="post">
                                            <input type="hidden" name="cartId" value="@item.Cart_id" />
                                            <button type="submit" class="btn btn-link text-danger p-0"><i class="bi bi-x-lg"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        
        <div class="col-lg-3 mt-4 mt-lg-0">
            <div class="card border-0 shadow-sm rounded-3 p-4 bg-light">
                <h5 class="fw-bold mb-4">Cart Total</h5>
                <div class="d-flex justify-content-between mb-3">
                    <span>Subtotal</span>
                    <span class="fw-bold">$@total</span>
                </div>
                <div class="d-flex justify-content-between mb-3 border-bottom pb-3">
                    <span>Shipping</span>
                    <span class="text-success fw-bold">Free</span>
                </div>
                <div class="d-flex justify-content-between mb-4 mt-2">
                    <h5 class="fw-bold">Total</h5>
                    <h5 class="fw-bold text-brown">$@total</h5>
                </div>
                <button type="button" class="btn btn-brown w-100 py-3 rounded-pill fw-bold border-0">
                    PROCEED TO CHECKOUT
                </button>
            </div>
        </div>
    </div>
</div>
<style>
    .text-brown { color: #8b4513 !important; }
    .btn-brown { background-color: #8b4513; color: white; transition: 0.3s; }
    .btn-brown:hover { background-color: #70360f; color: white; transform: translateY(-2px); box-shadow: 0 5px 15px rgba(139, 69, 19, 0.2); }
</style>
